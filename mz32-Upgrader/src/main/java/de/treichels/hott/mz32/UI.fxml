<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="5.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <CheckBox mnemonicParsing="false" text="Re-index files on radio">
                     <tooltip>
                        <Tooltip text="Re-calculate MD5 checksums of all files on the internal SD-card. This progress will take a long time." />
                     </tooltip></CheckBox>
                  <CheckBox mnemonicParsing="false" selected="true" text="Update resource files" />
                  <VBox>
                     <children>
                        <CheckBox mnemonicParsing="false" selected="true" text="Replace custom help pages" />
                        <CheckBox mnemonicParsing="false" selected="true" text="Replace custom voice files" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </VBox>
                  <CheckBox mnemonicParsing="false" selected="true" text="Update firmware" />
               </children>
            </VBox>
            <Region HBox.hgrow="SOMETIMES" />
            <VBox>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="Drive" />
                        <ComboBox prefWidth="275.0" promptText="E:\ (MZ-32 HoTT Radio [16008200] v1.017)" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <Label text="Messages" />
      <TextArea prefHeight="200.0">
         <font>
            <Font name="Monospaced Regular" size="12.0" />
         </font></TextArea>
      <ButtonBar>
        <buttons>
          <Button mnemonicParsing="false" text="Online Update" />
        </buttons>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
