<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>${project.build.directory}/${project.build.finalName}-shaded.jar</source>
			<destName>HoTT-MdlViewer-SWT.jar</destName>
		</file>
		<file>
			<source>${project.build.directory}/${project.build.finalName}.exe</source>
			<destName>HoTT-MdlViewer-SWT.exe</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>COPYING*</include>
				<include>HoTTMdlViewer</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${swtPath}</directory>
			<outputDirectory>swt</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>